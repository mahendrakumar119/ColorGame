<%- include("../partials/header") %>
<script>
	$(document).ready(function(){
		$('#create_camp').click(function(e){
			e.preventDefault();
			var title=$('#t').val();
			var price=$('#p').val();
			var description=$('#d').val();
			var image=$('#i').val();
			$('.val').remove();
			if(title.length<1){
				$('#t').after('<p class="val">Required</p>');
			}
			if(price.length<1){
				$('#p').after('<p class="val">Required</p>');
			}
			if(description.length<1){
				$('#d').after('<p class="val">Required</p>');
			}
			if(image.length<1){
				$('#i').after('<p class="val">Required</p>');
			}
			else{
				$('#new_camp').submit();

			}

	});
	});
	
</script>
<div class="container">
		<div class="container form1">
			<div class="header">
				Create New Campground
			</div> 
			<br>
			<form id="new_camp" action="/campground" method="POST">
				<div class="form-group form-group-lg"> 
					<label for="t">Title</label>
					<input id="t" class="form-control" type="text" placeholder="name" name="name">
				</div>
				<div class="form-group form-group-lg">
					<label for="p">Price</label>
					<input id="p" class="form-control" type="number" placeholder="price" name="price" min="0.01" step="0.01">
				</div> 
				<div class="form-group form-group-lg">
					<label for="i">Image Url</label>
					<input id="i" class="form-control" type="text" placeholder="image url" name="image">
				</div>
				<div class="form-group form-group-lg">
					<label for="d">Description</label>
					<input id="d" class="form-control" type="text" placeholder="description" name="description">
				</div>
				<div class="form-group form-group-lg">
					<button id="create_camp" class="btn btn-default btn-lg btn-block btn-success" type="submit">
						Submit!
					</button>
				</div>
		
			</form>
			<a href="/campground" class="pull-right">Go back!</a>
		</div>
		
	
</div>
	


