<%- include("../partials/header") %>

<div class="container">
		
		<div class="container form1">
			<div class="header">
				
					Edit Comment
				
			</div> 
			<br>
			<form action="/campground/<%= campground_id %>/comments/<%=comment._id%>?_method=PUT" method="POST">
				
				<div class="form-group form-group-lg">
					<label for="t">Comment</label>
					<input id="t" class="form-control" type="text" value="<%=comment.text%>" name="comment[text]" required>
				</div>
				
		
				<div class="form-group form-group-lg">
					<button class="btn btn-default btn-lg btn-block btn-success">
						Update Comment
					</button>
				</div>
		
			</form>
			<a href="/campground/<%=campground_id %>" class="pull-right">Go back!</a>
		</div>
		
	
</div>
	


