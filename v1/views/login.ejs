<%- include("./partials/header") %>
<script>
	$(document).ready(function(){
		$('#l_and_s_btn').click(function(e){
			e.preventDefault();
			var username=$('#u').val();
			var password=$('#p').val();
			$('.val').remove();
			if(username.length<1){
				$('#u').after('<p class="val">Please enter username</p>');
			}
			if(password.length<1){
				$('#p').after('<p class="val">Please enter password</p>');
			}
			else{
				$('#LoginForm').submit();
			}
		});
	});
</script>

	<div class="container">
	<!-- <div class="row"> -->
		<div class="container form1">
			<div class="header">
				Login Portal
			</div> 
			<br>
		
			<form id="LoginForm" action="/login" method="POST">
				<div class="form-group form-group-lg">
					<label for="u">Username</label>
					<input id="u" class="form-control" type="text" name="username" placeholder="username">
				</div>
				<div class="form-group form-group-lg">
					<label for="p">Password</label>
					<input id="p" class="form-control" type="password" name="password" placeholder="password">
				</div>
				<div class="form-group form-check">
   					 <input type="checkbox" class="form-check-input" id="exampleCheck1" onclick="myFunction()">
    				<label class="form-check-label" for="exampleCheck1">Show Password</label>
  				</div>
				
				<div class="form-group form-group-lg">
					<button id="l_and_s_btn" class="form-control btn-success" type="submit">
						Login
					</button>
				</div>
				<div style="text-align:center">
					<a href="/forgot"><b>Forgot Password?</b></a>
				</div>
				
			</form>
			<hr style="border-top:1px solid black;">
			<div class="form-group form-group-lg" style="margin: auto;">
				<p style="text-align:center">
					New to Yelpcamp?
					<a href="/register"><b>Join now</b></a>
				</p>
				
			</div>
			
			
			
		</div>
		
	<!-- </div> -->
	
</div>



