<%- include("partials/header") %>
<div class="container">
	
		
		<div class="container form1">
			<div class="header">
				
					Update Profile Portal
				
			</div> 
			<br>
			<form action="/user/<%=user._id%>?_method=PUT" method="POST">
				
				<div class="form-group form-group-lg">
					<label for="f">Fullname</label>
					<input id="f" class="form-control" type="text" name="user[fullname]" value="<%=user.fullname%>" required>
				</div>
				<div class="form-group form-group-lg">
					<label for="e">Email-Id</label>
					<input id="e" class="form-control" type="email" name="user[email]" value="<%=user.email%>" required>
				</div>
				<div class="form-group form-group-lg">
					<button class="form-control btn btn-success">
						Update
					</button>
				</div>
			</form>
			<a href="/campground" class="pull-right">Go back!</a>
		</div>
	
</div>
	
<%- include("partials/footer1") %>